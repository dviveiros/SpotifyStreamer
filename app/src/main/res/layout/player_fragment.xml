<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.danielviveiros.spotifystreamer.PlayerActivityFragment"
    android:weightSum="1">

    <TextView android:id="@+id/artist_textview"
        android:text="Coldplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal" />

    <TextView android:id="@+id/album_textview"
        android:text="Ghost Stories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal" />

    <ImageView
        android:id="@+id/album_artwork"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:src="@mipmap/ic_launcher"
        android:layout_gravity="center_horizontal"
        android:nestedScrollingEnabled="true"
        android:layout_weight="0.73" />

    <TextView android:id="@+id/track_textview"
        android:text="A Sky Full of Stars"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal" />

    <SeekBar android:id="@+id/seekBar"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="26dp"
        android:max="10"
        android:layout_gravity="center_horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal">
        
        <ImageButton
            android:layout_width="30dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_skip_previous_black_24dp"
            android:layout_margin="5dp"
            android:layout_weight="1" />

        <ImageButton
            android:layout_width="30dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_play_arrow_black_24dp"
            android:layout_margin="5dp"
            android:layout_weight="1" />

        <ImageButton
            android:layout_width="30dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_skip_next_black_24dp"
            android:layout_margin="5dp"
            android:layout_weight="1" />

    </LinearLayout>




</LinearLayout>
